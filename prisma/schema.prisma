generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Site {
  id     String  @id @default(cuid())
  url    String  @unique
  errors Error[]
}

model Error {
  id          Int      @id @default(autoincrement())
  type        String
  errno       Int?
  message     String
  file        String
  line        Int
  timestamp   DateTime
  phpVersion  String
  wpVersion   String
  wpTheme     Json?
  wpPlugins   Json?
  fingerprint String
  backtrace   Json?
  createdAt   DateTime @default(now())
  siteId      String
  site        Site     @relation(fields: [siteId], references: [id])

  @@unique([fingerprint, timestamp])
}
